#include <stdio.h>
#include <stdlib.h>

 int coinToss() {
    int randomnumber;
    randomnumber = rand() % 2;
    return randomnumber;
}

int main() {
    // Seed the random number generator with the current time to get different results when we run the code multiple times.
    srand(time(NULL));

    int randNum = coinToss();
    printf("%d\n", randNum);

    return 0;
}
